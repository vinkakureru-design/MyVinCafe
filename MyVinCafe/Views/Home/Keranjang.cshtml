@model List<MyVinCafe.Models.Keranjang>

@{
    ViewData["Title"] = "Logistik Pesanan";
    int grandTotal = Model.Sum(x => x.Total);
}

<div class="container mt-5">
    <div class="card border-dark rounded-0 shadow-sm">
        <div class="card-header bg-dark text-warning p-3">
            <h4 class="mb-0 text-uppercase fw-bold" style="letter-spacing: 2px;">
                <i class="bi bi-box-seam"></i> Manifest Pesanan (Cart)
            </h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-secondary text-uppercase small fw-bold">
                    <tr>
                        <th class="ps-4">Item Menu</th>
                        <th class="text-center">Jumlah</th>
                        <th class="text-end">Harga Satuan</th>
                        <th class="text-end pe-4">Sub-Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="bi bi-cart-x display-4 d-block mb-3"></i>
                                BELUM ADA DATA ITEM DALAM KERANJANG.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold">@item.NamaMenu</span>
                                </td>
                                <td class="text-center">@item.Jumlah</td>
                                <td class="text-end">Rp @item.Harga.ToString("N0")</td>
                                <td class="text-end pe-4 fw-bold">Rp @item.Total.ToString("N0")</td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot class="bg-light border-top border-dark border-2">
                    <tr>
                        <td colspan="3" class="text-end fw-bold text-uppercase py-3">Total Amunisi (Grand Total):</td>
                        <td class="text-end pe-4 py-3"><h4 class="mb-0 fw-bold text-primary">Rp @grandTotal.ToString("N0")</h4></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="card-footer bg-white border-top-0 p-4 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-dark btn-mil-action">
                <i class="bi bi-arrow-left"></i> TAMBAH ITEM LAGI
            </a>
            <div class="gap-2 d-flex">
                <a asp-action="ClearCart" class="btn btn-outline-danger btn-mil-action">
                    <i class="bi bi-trash"></i> KOSONGKAN
                </a>
                <button class="btn btn-dark btn-mil-action px-5" @(Model.Any() ? "" : "disabled")>
                    <i class="bi bi-shield-check"></i> LANJUTKAN PEMBAYARAN (CHECKOUT)
                </a>
            </div>
        </div>
    </div>
    <p class="text-center mt-3 text-muted small text-uppercase">Otorisasi Markas MyVinCafe - Status: Pending</p>
</div>