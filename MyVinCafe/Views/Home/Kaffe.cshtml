@{
    ViewData["Title"] = "Kaffe";
}

@model IEnumerable<MyVinCafe.Models.MenuCafe>

<div class="container mt-5">
    <h2 class="text-center text-uppercase fw-bold mb-4">--- KAFFEE MENU ---</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 card-military border-dark shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.NamaMenu</h5>
                        <p class="card-text small text-muted">@item.Deskripsi</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="fw-bold text-primary">Rp @item.Harga.ToString("N0")</span>
                            @if (item.Diskon > 0)
                            {
                                <span class="badge bg-danger">@item.Diskon% OFF For Member</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-dark border-0">
                        <button class="btn btn-warning btn-sm w-100 fw-bold">PESAN SEKARANG</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>