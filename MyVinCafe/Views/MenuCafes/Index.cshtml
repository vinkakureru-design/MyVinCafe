@model IEnumerable<MyVinCafe.Models.MenuCafe>

@{
    ViewData["Title"] = "Daftar Menu Markas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-bold" style="letter-spacing: 2px;">
            <i class="bi bi-list-stars"></i> Inventory Menu Cafe
        </h2>
        <a asp-action="Create" class="btn btn-dark btn-mil-action py-2 px-4">
            <i class="bi bi-plus-lg"></i> Tambah Menu Baru
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show bg-military border-0" role="alert">
            <strong>BERHASIL:</strong> @TempData["Success"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 card-military shadow-sm">
                    <div class="card-header bg-military d-flex justify-content-between">
                        <span class="badge bg-warning text-dark">@item.Kategori</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-uppercase">@item.NamaMenu</h5>
                        <p class="card-text text-muted small">
                            @(string.IsNullOrEmpty(item.Deskripsi) ? "Tidak ada deskripsi operasional." : item.Deskripsi)
                        </p>
                        <hr />
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0 fw-bold">Rp @item.Harga.ToString("N0")</span>
                            @if (item.Diskon > 0)
                            {
                                <span class="badge bg-danger">DISKON @item.Diskon%</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 pb-3">
                        <div class="row g-2">
                            <div class="col-6">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm w-100 btn-mil-action">
                                    <i class="bi bi-pencil-square"></i> EDIT
                                </a>
                            </div>
                            <div class="col-6">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm w-100 btn-mil-action">
                                    <i class="bi bi-trash"></i> DELETE
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>